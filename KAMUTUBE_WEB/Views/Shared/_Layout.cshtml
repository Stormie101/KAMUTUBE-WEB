<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KAMUTUBE_WEB</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KAMUTUBE_WEB.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Logo on the left -->
        <div class="logo" id="logo">
            <a asp-controller="Home" asp-action="Index">
                <img src="~/image/KAMU-LOG.png" alt="Logo" asp-append-version="true">
            </a>
        </div>

        <!-- Search bar and button in the center -->
        <div class="search-container">
            <input type="text" id="searchInput" placeholder="Search Video..." />
            <button id="searchButton">🔍</button>
        </div>

        <!-- User manual on the right -->
        <div class="user-manual">
            <a asp-controller="Home" asp-action="Manual" class="btn btn-success">User Manual</a>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="color:white; text-align:center;">
            &copy; 2025 - KAMUTUBE -
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
<script src="~/js/youtube.js"></script>
</html>
